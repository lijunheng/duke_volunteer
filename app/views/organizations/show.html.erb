<% provide(:title, @organization.name) %>
<div class="row">
	<aside class="span4">
		<section>
			<h3>
				<%= @organization.name %>
			</h3>
		</section>
		<section>
			<p>Location: <%= Location.find_by(id: @organization.geo_location).address %></p>
			<p>Contact: <%= @organization.contact_information %></p>
			<p><%= link_to "Create new listing", new_organization_volunteer_path(@organization), :class => 'btn btn-default btn-sm' %></p>
			<p><%= link_to "Back", root_path %></p>
		</section>
	</aside>
	<div class="span8">
		<% if @organization.volunteers.any? %>
      		<h3>Opportunities (<%= @organization.volunteers.count %>)</h3>
      		<ol class="to_be_listed">
        		<%= render @volunteers %>
      		</ol>
      		<%= will_paginate @volunteers %>
    	<% end %>
	</div>
</div>